<div class="container body-content span=8 offset=2">

        <form class="form-horizontal" method="post" action="/user/details">
        <form class="form-horizontal">
        <div class="col-md-6">

            <p> User profile</p>
            <blockquote>
                <p> Name: {{user.fullName}}</p>
                <p> Contact me: {{user.email}}</p>
            </blockquote>

        </div>

        </form>
        </form>

        <div class="col-md-12">

            <h4> My articles</h4>
        {{#each user.articles }}

            <blockquote>
                <header>
                    <h2>{{article.title}}</h2>
                </header>
                <p>{{this.content}}</p>
                <footer>Created on <cite title="Source Title">{{this.date}}</cite></footer>
            </blockquote>


        {{/each}}

            <h4> My comments</h4>
            {{#each user.comments}}

                <blockquote>
                    <p>{{comment}}</p>
                    <footer>Posted on <cite title="Source Title">{{this.title}}</cite></footer>
                </blockquote>

            {{/each}}

        </div>
</div>
